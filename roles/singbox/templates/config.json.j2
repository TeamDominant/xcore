{
  "log": {
    "level": "debug",
    "output": "access.log",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "type": "local",
        "tag": "dns-main"
      }
    ],
    "rules": [
      {
        "rule_set": [
          "category-ads-all"
        ],
        "action": "predefined",
        "rcode": "NOERROR"
      }
    ],
    "final": "dns-main"
  },
  "inbounds": [
{% for protocol in enriched_protocols %}
    {
      "type": "{{ protocol.type }}",
      "tag": "{{ protocol.type }}-in",
      "listen": "0.0.0.0",
      "listen_port": {{ 10550 if protocol.type == 'vless' else 10443 }},
      "users": [
{% for user in protocol.users %}
        {
          "name": "{{ user.name }}",
{% if protocol.type == 'vless' %}
          "uuid": "{{ user.uuid | default('generate-uuid-here-or-from-vars') }}"
{% elif protocol.type == 'trojan' %}
          "password": "{{ user.password | default('default-password') }}"
{% endif %}
        }{{ "," if not loop.last else "" }}
{% endfor %}
      ],
      "transport": {},
      "multiplex": {
        "enabled": true,
        "padding": true
      }
    }{{ "," if not loop.last else "" }}
{% endfor %}
  ],
  "outbounds": [
    {
      "type": "direct",
      "tag": "IPv4",
      "domain_resolver": {
        "server": "dns-main",
        "strategy": "prefer_ipv4"
      }
    },
    {
      "type": "direct",
      "tag": "direct"
    },
    {
      "type": "socks",
      "tag": "warp",
      "server": "warp",
      "server_port": {{ warp_port }}
    }
  ],
  "route": {
    "rules": [
      {
        "action": "sniff"
      },
      {
        "protocol": "dns",
        "action": "hijack-dns"
      },
      {
        "rule_set": [
          "category-ads-all"
        ],
        "action": "reject",
        "method": "drop"
      },
      {
        "domain_suffix": [
          ".ru",
          ".su",
          ".ru.com",
          ".ru.net",
          "habr.com",
          "ntc.party",
          "canva.com"
        ],
        "domain_keyword": [
          "xn--"
        ],
        "rule_set": [
          "geoip-ru",
          "category-gov-ru",
          "google-deepmind",
          "openai",
          "anthropic",
          "xai"
        ],
        "outbound": "warp"
      },
      {
        "rule_set": [
          "google"
        ],
        "outbound": "IPv4"
      }
    ],
    "rule_set": [
      {
        "tag": "geoip-ru",
        "type": "local",
        "format": "binary",
        "path": "/var/www/ruleset/geoip-ru.srs"
      },
      {
        "tag": "category-gov-ru",
        "type": "local",
        "format": "binary",
        "path": "/var/www/ruleset/geosite-category-gov-ru.srs"
      },
      {
        "tag": "category-ads-all",
        "type": "local",
        "format": "binary",
        "path": "/var/www/ruleset/geosite-category-ads-all.srs"
      },
      {
        "tag": "google",
        "type": "local",
        "format": "binary",
        "path": "/var/www/ruleset/geosite-google.srs"
      },
      {
        "tag": "google-deepmind",
        "type": "local",
        "format": "binary",
        "path": "/var/www/ruleset/geosite-google-deepmind.srs"
      },
      {
        "tag": "openai",
        "type": "local",
        "format": "binary",
        "path": "/var/www/ruleset/geosite-openai.srs"
      },
      {
        "tag": "anthropic",
        "type": "local",
        "format": "binary",
        "path": "/var/www/ruleset/geosite-anthropic.srs"
      },
      {
        "tag": "xai",
        "type": "local",
        "format": "binary",
        "path": "/var/www/ruleset/geosite-xai.srs"
      }
    ]
  },
  "experimental": {
    "cache_file": {
      "enabled": true
    },
    "v2ray_api": {
      "listen": "0.0.0.0:10812",
      "stats": {
        "enabled": true,
        "inbounds": [
{% for proto in enriched_protocols %}
          "{{ proto.type }}-in"{{ "," if not loop.last else "" }}
{% endfor %}
        ],
        "outbounds": [
          "direct",
          "warp",
          "IPv4"
        ],
        "users": [
{% set all_users = [] %}
{% for proto in enriched_protocols %}
{% for user in proto.users %}
{% if user.name not in all_users %}
{% set _ = all_users.append(user.name) %}
{% endif %}
{% endfor %}
{% endfor %}
{% for username in all_users %}
          "{{ username }}"{{ "," if not loop.last else "" }}
{% endfor %}
        ]
      }
    }
  }
}