x-container: &container
  #environment:
  #  - TZ=${TZ:-Asia/Bangkok}
  #network_mode: bridge
  restart: ${RESTART_POLICY:-unless-stopped}   # Перезапускаться всегда кроме команды завершения или поломки healthcheck
  # cpuset: ${CPUSET:-}                        # Номера ядер ЦП, в которых разрешено выполнение (0-3, 0,1)
  # cpu_shares: ${CPU_SHARES:-512}             # Доля ЦП (относительный вес, макс. 1024) при распределении между контейнерами
  # cpus: ${CPUS:-0.5}                         # Сколько ресурсов ЦП может использовать контейнер
  # mem_limit: ${MEM_LIMIT:-1024m}             # Максимальное значение опертивной памяти
  # mem_reservation: ${MEM_RESERVATION:-256m}  # Начальное значение опертивной памяти
  security_opt:
    - no-new-privileges:true
  # read_only: true
  tmpfs:
    - /tmp:noexec,nosuid,size=50m
  env_file:
    - ".env"

x-logging: &logging
  logging:
    driver: "json-file"
    options:
      max-size: ${LOGGING_MAX_SIZE:-5M}
      max-file: ${LOGGING_COUNT_FILES:-10}

services:
  # Certbot service for Let's Encrypt certificates
  certbot:
    <<: [*container, *logging]
    image: certbot/dns-cloudflare:${CERTBOT_VERSION:-latest}
    container_name: certbot
    volumes:
      - ./certbot/cloudflare.ini:/certbot/cloudflare.ini:ro
      - ./certbot/entrypoint.sh:/certbot/entrypoint.sh:ro
      - certificate:/etc/haproxy/certs
      - certificate:/etc/letsencrypt
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      - DOMAIN_NAME=${DOMAIN_NAME}
      - EMAIL=${EMAIL}
    entrypoint: ["/bin/sh", "/certbot/entrypoint.sh"]
    healthcheck:
      test: ["CMD", "sh", "-c", "[ -s /etc/haproxy/certs/${DOMAIN_NAME}.pem ] && [ -s /etc/haproxy/certs/dhparam.pem ]"]
      interval: 20s
      timeout: 5s
      retries: 12
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 100M
    profiles: [certbot, full, base]

  # HAProxy - load balancer and HTTPS proxy
  haproxy:
    <<: [*container, *logging]
    image: haproxy:${HAPROXY_VERSION:-3.2-alpine}
    container_name: haproxy
    volumes:
      - ./haproxy/data:/etc/haproxy/data
      - ./haproxy/lua:/etc/haproxy/lua
      - ./haproxy/haproxy.cfg:/usr/local/etc/haproxy/haproxy.cfg:ro
      - certificate:/etc/haproxy/certs
    ports:
      - "${HAPROXY_EXTERNAL_PORT:-443}:443"
    depends_on:
      certbot:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "sh", "-c", "echo 'show info' | socat stdio unix-connect:/tmp/admin.sock | grep -q 'Process_num: 1'"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 120M
    profiles: [haproxy, full, base]

  # Nginx for static content and proxying
  nginx:
    <<: [*container, *logging]
    build:
      context: ./nginx
      dockerfile: Dockerfile
    container_name: nginx
    extra_hosts:
      - "host.docker.internal:172.17.0.1"
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/conf.d:/etc/nginx/conf.d:ro
      - ./nginx/locations:/etc/nginx/locations:ro
      - ./nginx/var/www:/var/www:ro
    healthcheck:
      test: ["CMD-SHELL", "pgrep -f nginx || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 120M
    profiles: [nginx, full, base]

{% if proxy_core == "xray" %}
  # Xray proxy service
  xray:
    <<: [*container, *logging]
    build:
      context: ./xray
      dockerfile: Dockerfile
    container_name: xray
    volumes:
      - ${XRAY_CONFIG_PATH:-./xray/config}:/usr/local/etc/xray/
    healthcheck:
      test: ["CMD", "pidof", "xray"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 20s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 150M
    profiles: [xray, full, base]

{% elif proxy_core == "singbox" %}
  # Singbox proxy service
  singbox:
    <<: [*container, *logging]
    build:
      context: ./singbox
      dockerfile: Dockerfile
    container_name: singbox
    dns:
      - 1.1.1.1
    volumes:
      - ${SINGBOX_CONFIG_PATH:-./singbox/config}:/usr/local/etc/singbox/
      - ./nginx/var/www/ruleset:/var/www/ruleset
      - ./singbox/scripts:/usr/local/bin/singbox/scripts:ro
    healthcheck:
      test: ["CMD", "pidof", "singbox"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 20s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 150M
    profiles: [singbox, full, base]
{% endif %}

  # Warp encrypted tunnel to Cloudflare
  warp:
    <<: [*logging]
    image: caomingjun/warp
    container_name: warp
    restart: always
    # add removed rule back (https://github.com/opencontainers/runc/pull/3468)
    device_cgroup_rules:
      - 'c 10:200 rwm'
    environment:
      - WARP_SLEEP=2
      # - WARP_LICENSE_KEY= # optional
      # - WARP_ENABLE_NAT=1 # enable nat
    cap_add:
      # additional required cap for warp, both for podman and docker
      - NET_ADMIN
    sysctls:
      - net.ipv6.conf.all.disable_ipv6=0
      - net.ipv4.conf.all.src_valid_mark=1
      # uncomment for nat
      # - net.ipv4.ip_forward=1
      # - net.ipv6.conf.all.forwarding=1
      # - net.ipv6.conf.all.accept_ra=2
    volumes:
      - ${WARP_DATA:-./warp/data}:/var/lib/cloudflare-warp
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 200M
    profiles: [warp, full]

  # V2RAY BACKEND - main management service for v2rs
  backend:
    <<: [*container, *logging]
    image: ghcr.io/adam-sizzler/v2rs-backend:${VERSION:-latest}
    container_name: v2rs-backend
    volumes:
      - ${CONFIG_PATH:-./v2rs/backend/config.yml}:/app/config.yml:ro
      - ${CERTS_PATH:-./v2rs/certs}:/app/certs
      - backend-data:/app/data
    healthcheck:
      test: ["CMD-SHELL", "pgrep -f v2rs-backend || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 50M
    profiles: [backend, full]

  # V2RAY NODE - node for processing user traffic
  node:
    <<: [*container, *logging]
    image: ghcr.io/adam-sizzler/v2rs-node:${VERSION:-latest}
    container_name: v2rs-node
    user: "0:0"
    volumes:
      - ${CONFIG_PATH:-./v2rs/node/config.yml}:/app/config.yml:ro
      - ${CERTS_PATH:-./v2rs/certs}:/app/certs
      - ${XRAY_CONFIG_PATH:-./xray/config}:/usr/local/etc/xray
      - ./haproxy/data:/etc/haproxy/data
      - /var/run/docker.sock:/var/run/docker.sock
    healthcheck:
      test: ["CMD-SHELL", "pgrep -f v2rs-node || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      resources:
        limits:
          cpus: '0.4'
          memory: 50M
    profiles: [node, full]

  # V2RAY SUBSCRIPTION - subscription service for users
  subscription:
    <<: [*container, *logging]
    image: ghcr.io/adam-sizzler/v2rs-subscription:${VERSION:-latest}
    container_name: v2rs-subscription
    volumes:
      - ${CONFIG_PATH:-./v2rs/subscription/config.yml}:/app/config.yml:ro
      - ${CERTS_PATH:-./v2rs/certs}:/app/certs
      - ./v2rs/subscription/templates:/app/templates:ro
      - ./v2rs/subscription/assets:/app/assets:ro
    healthcheck:
      test: ["CMD-SHELL", "pgrep -f v2rs-subscription || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      resources:
        limits:
          cpus: '0.3'
          memory: 50M
    profiles: [subscription, full]

# Volume for storing Certbot data
volumes:
  certificate:
  backend-data:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: ${DATA_PATH:-./v2rs/backend/data}

networks:
  default:
#    driver: ${NETWORK_DRIVER:-bridge}
#    driver_opts:
#      com.docker.network.dns.ttl: "60"
