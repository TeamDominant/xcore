x-common: &common
  user: ${CONTAINER_USER:-}                    # UID/GID пользователя в контейнере https://dev.to/acro5piano/specifying-user-and-group-in-docker-i2e

x-container: &container
  restart: ${RESTART_POLICY:-unless-stopped}   # Перезапускаться всегда кроме команды завершения или поломки healthcheck
  # cpuset: ${CPUSET:-}                        # Номера ядер ЦП, в которых разрешено выполнение (0-3, 0,1)
  # cpu_shares: ${CPU_SHARES:-512}             # Доля ЦП (относительный вес, макс. 1024) при распределении между контейнерами
  # cpus: ${CPUS:-0.5}                         # Сколько ресурсов ЦП может использовать контейнер
  # mem_limit: ${MEM_LIMIT:-1024m}             # Максимальное значение опертивной памяти
  # mem_reservation: ${MEM_RESERVATION:-256m}  # Начальное значение опертивной памяти
  security_opt:
    - no-new-privileges:true
  # read_only: true
  tmpfs:
    - /tmp:noexec,nosuid,size=50m
  env_file:
    - ".env"

x-logging: &logging
  logging:
    driver: "json-file"
    options:
      max-size: ${LOGGING_MAX_SIZE:-5M}
      max-file: ${LOGGING_COUNT_FILES:-10}

services:
  # Certbot service for Let's Encrypt certificates
  certbot:
    <<: [*container, *logging]
    image: certbot/dns-cloudflare:${CERTBOT_VERSION:-latest}
    container_name: certbot
    volumes:
      - ./certbot/cloudflare.ini:/certbot/cloudflare.ini:ro
      - ./certbot/entrypoint.sh:/certbot/entrypoint.sh:ro
      - certificate:/etc/haproxy/certs
      - certificate:/etc/letsencrypt
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      - DOMAIN_NAME=${DOMAIN_NAME}
      - EMAIL=${EMAIL}
    entrypoint: ["/bin/sh", "/certbot/entrypoint.sh"]
    healthcheck:
      test: ["CMD", "sh", "-c", "[ -s /etc/haproxy/certs/${DOMAIN_NAME}.pem ] && [ -s /etc/haproxy/certs/dhparam.pem ]"]
      interval: 20s
      timeout: 5s
      retries: 12
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 100M
    profiles: [certbot, full, base]

  # HAProxy - load balancer and HTTPS proxy
  haproxy:
    <<: [*container, *logging]
    image: haproxy:${HAPROXY_VERSION:-3.2-alpine}
    container_name: haproxy
    volumes:
      - ./haproxy/data:/etc/haproxy/data
      - ./haproxy/lua:/etc/haproxy/lua
      - ./haproxy/haproxy.cfg:/usr/local/etc/haproxy/haproxy.cfg:ro
      - certificate:/etc/haproxy/certs
    ports:
      - "${HAPROXY_EXTERNAL_PORT:-443}:443"
    depends_on:
      certbot:
        condition: service_healthy
    healthcheck:
      test: ["CMD", "sh", "-c", "echo 'show info' | socat stdio unix-connect:/tmp/admin.sock | grep -q 'Process_num: 1'"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 120M
    profiles: [haproxy, full, base]

  # Nginx for static content and proxying
  nginx:
    <<: [*container, *logging]
    build:
      context: ./nginx
      dockerfile: Dockerfile
    container_name: nginx
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/conf.d:/etc/nginx/conf.d:ro
      - ./nginx/locations:/etc/nginx/locations:ro
      - ./nginx/var/www:/var/www:ro
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:36078/check_health"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 20s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 120M
    profiles: [nginx, full, base]

  # Xray proxy service
  xray:
    <<: [*container, *logging]
    build:
      context: ./xray
      dockerfile: Dockerfile
    container_name: xray
    volumes:
      - ${XRAY_CONFIG_PATH:-./xray/config}:/usr/local/etc/xray/
    healthcheck:
      test: ["CMD", "pidof", "xray"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 20s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 150M
    profiles: [xray, full, base]

  # Warp encrypted tunnel to Cloudflare
  warp:
    <<: [*container, *logging]
    build:
      context: ./warp
      dockerfile: Dockerfile
    container_name: warp
    volumes:
      - ./warp/logs:/var/lib/cloudflare-warp
    environment:
      - FAMILIES_MODE=${FAMILIES_MODE:-off}
      - WARP_LICENSE=${WARP_LICENSE:-}
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 150M
    profiles: [warp, full]

  # V2RAY BACKEND - main management service for v2ray-stat
  backend:
    <<: [*container, *logging, *common]
    image: ghcr.io/adam-sizzler/v2ray-stat-backend:${VERSION:-latest}
    container_name: v2ray-stat-backend
    volumes:
      - ${CONFIG_PATH:-./v2rs/backend/config.yaml}:/app/config.yaml:ro
      - ${CERTS_PATH:-./v2rs/certs}:/app/certs
      - backend-data:/app/data
    healthcheck:
      test: ["CMD-SHELL", "pgrep -f v2ray-stat-backend || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 50M
    profiles: [backend, full]

  # V2RAY NODE - node for processing user traffic
  node:
    <<: [*container, *logging, *common]
    image: ghcr.io/adam-sizzler/v2ray-stat-node:${VERSION:-latest}
    container_name: v2ray-stat-node
    volumes:
      - ${CONFIG_PATH:-./v2rs/node/config.yaml}:/app/config.yaml:ro
      - ${CERTS_PATH:-./v2rs/certs}:/app/certs
      - ${XRAY_CONFIG_PATH:-./xray/config}:/usr/local/etc/xray
    healthcheck:
      test: ["CMD-SHELL", "pgrep -f v2ray-stat-node || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      resources:
        limits:
          cpus: '0.4'
          memory: 50M
    profiles: [node, full]

  # V2RAY SUBSCRIPTION - subscription service for users
  subscription:
    <<: [*container, *logging, *common]
    image: ghcr.io/adam-sizzler/v2ray-stat-subscription:${VERSION:-latest}
    container_name: v2ray-stat-subscription
    volumes:
      - ${CONFIG_PATH:-./v2rs/subscription/config.yaml}:/app/config.yaml:ro
      - ${CERTS_PATH:-./v2rs/certs}:/app/certs
      - ./v2rs/subscription/templates:/app/templates:ro
    healthcheck:
      test: ["CMD-SHELL", "pgrep -f v2ray-stat-subscription || exit 1"]
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 10s
    deploy:
      resources:
        limits:
          cpus: '0.3'
          memory: 50M
    profiles: [subscription, full]

# Volume for storing Certbot data
volumes:
  certificate:
  backend-data:
    driver: local
    driver_opts:
      type: none
      o: bind
      device: ${DATA_PATH:-./v2rs/backend/data}

networks:
  default:
    driver: ${NETWORK_DRIVER:-bridge}
    ipam:
      config:
        - subnet: ${DOCKER_SUBNET:-172.32.0.0/28}
