services:
  # Certbot service for Let's Encrypt certificates
  certbot:
    image: certbot/dns-cloudflare:latest
    container_name: certbot
    networks:
      - proxy_net
    volumes:
      - ./certbot/cloudflare.ini:/certbot/cloudflare.ini:ro
      - ./certbot/entrypoint.sh:/certbot/entrypoint.sh:ro
      - certificate:/etc/haproxy/certs
      - certificate:/etc/letsencrypt
      - /var/run/docker.sock:/var/run/docker.sock:ro
    environment:
      - DOMAIN_NAME=${DOMAIN_NAME}
      - EMAIL=${EMAIL}
    entrypoint: ["/bin/sh", "/certbot/entrypoint.sh"]
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "sh", "-c", "[ -s /etc/haproxy/certs/${DOMAIN_NAME}.pem ] && [ -s /etc/haproxy/certs/dhparam.pem ]"]
      interval: 20s
      timeout: 5s
      retries: 12
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 100M
    profiles: [certbot, full]

  # HAProxy - load balancer and HTTPS proxy
  haproxy:
    image: haproxy:3.2-alpine
    container_name: haproxy
    networks:
      - proxy_net
    volumes:
      - ./haproxy/data:/etc/haproxy/data
      - ./haproxy/lua:/etc/haproxy/lua
      - ./haproxy/haproxy.cfg:/usr/local/etc/haproxy/haproxy.cfg:ro
      - certificate:/etc/haproxy/certs
    ports:
      - "${HAPROXY_EXTERNAL_PORT}:${HAPROXY_EXTERNAL_PORT}"
    depends_on:
      certbot:
        condition: service_healthy
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "sh", "-c", "echo 'show info' | socat stdio unix-connect:/tmp/admin.sock | grep -q 'Process_num: 1'"]
      interval: 10s
      timeout: 5s
      retries: 5
      start_period: 30s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 120M
    profiles: [haproxy, full]

  # Nginx for static content and proxying
  nginx:
    build:
      context: ./nginx
      dockerfile: Dockerfile
    container_name: nginx
    networks:
      - proxy_net
    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf:ro
      - ./nginx/conf.d:/etc/nginx/conf.d:ro
      - ./nginx/locations:/etc/nginx/locations:ro
      - ./nginx/var/www/{{ subscription_path }}:/var/www/{{ subscription_path }}:ro
{% if setup_shellinabox | default(false) %}
    extra_hosts:
      - "host.docker.internal:host-gateway"
{% endif %}
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:36078/check_health"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 20s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 120M
    profiles: [nginx, full]

  # Xray proxy service
  xray:
    build:
      context: ./xray
      dockerfile: Dockerfile
    container_name: xray
    networks:
      - proxy_net
    volumes:
      - ./xray/config/:/usr/local/etc/xray/
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "pidof", "xray"]
      interval: 10s
      timeout: 5s
      retries: 3
      start_period: 20s
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 150M
    profiles: [xray, full]

  # Warp encrypted tunnel to Cloudflare
  warp:
    build:
      context: ./warp
      dockerfile: Dockerfile
    container_name: warp
    networks:
      - proxy_net
    volumes:
      - ./warp/logs:/var/lib/cloudflare-warp
    environment:
      - "FAMILIES_MODE=off"
      - "WARP_LICENSE={{ warp_license }}"
    restart: unless-stopped
    deploy:
      resources:
        limits:
          cpus: '0.5'
          memory: 150M
    profiles: [warp, full]

# Volume for storing Certbot data
volumes:
  certificate:

networks:
  proxy_net:
    driver: bridge
    ipam:
      config:
        - subnet: 172.32.0.0/16
