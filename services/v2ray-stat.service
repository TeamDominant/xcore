[Unit]
Description=V2ray stat Service
After=network.target

[Service]
User=root
Group=root
ExecStart=/usr/local/etc/v2ray-stat/v2ray-stat --dns
WorkingDirectory=/usr/local/etc/v2ray-stat
Restart=always
RestartSec=5
KillSignal=SIGTERM
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target